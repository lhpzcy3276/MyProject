<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangxin.myproject.activity.VideoActivity">

    <com.example.kangxin.myproject.customview.landlayout_video.LandLayoutVideo
        android:id="@+id/activity_video_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <FrameLayout
        android:id="@+id/activity_video_framelayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/activity_video_surfaceview"
        android:background="@android:color/holo_red_light"
        ></FrameLayout>
</android.support.constraint.ConstraintLayout>
