<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangxin.myproject.activity.VideoActivity">
    <Button
        android:id="@+id/activity_video_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        />
    <Button
        android:id="@+id/activity_video_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        app:layout_constraintTop_toBottomOf="@id/activity_video_bt1"
        app:layout_constraintLeft_toRightOf="@id/activity_video_bt1"
        />
    <Button
        android:id="@+id/activity_video_bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="replay"
        app:layout_constraintTop_toBottomOf="@id/activity_video_bt2"
        app:layout_constraintLeft_toRightOf="@id/activity_video_bt2"
        />
    <Button
        android:id="@+id/activity_video_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        app:layout_constraintTop_toBottomOf="@id/activity_video_bt3"
        app:layout_constraintLeft_toRightOf="@id/activity_video_bt3"
        />
    <SeekBar
        android:id="@+id/activity_video_seekbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/my_dimen_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_video_bt4"
        />
    <SurfaceView
        android:id="@+id/activity_video_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_video_seekbar"
        />
</android.support.constraint.ConstraintLayout>
