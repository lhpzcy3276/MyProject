<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangxin.myproject.activity.SpannableStringActivity">
    <TextView
        android:id="@+id/spannablestring_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/spannablestring_tx2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spannablestring_tx"
        android:layout_marginTop="@dimen/my_dimen_20"
        android:text=""
        />
    <TextView
        android:id="@+id/spannablestring_tx3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spannablestring_tx2"
        android:layout_marginTop="@dimen/my_dimen_20"
        android:text=""
        />

    <TextView
        android:id="@+id/spannablestring_tx4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spannablestring_tx3"
        android:layout_marginTop="@dimen/my_dimen_20"
        android:text=""
        />
</android.support.constraint.ConstraintLayout>
